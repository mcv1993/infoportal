<h1>InfoPortal</h1>
<br />

<h2>Log in</h2>

<%= simple_form_for(:admin, url: new_admin_session_path(:admin)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>

  </div>
<% end %>
